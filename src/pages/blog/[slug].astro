---
import Hero from "../../components/Hero.astro";
import Layout from "../../layouts/Layout.astro";
import { getPost, getBlogPosts } from "../../lib/hygraph";

export async function getStaticPaths() {
  const posts = await getBlogPosts();
  return posts.map((post) => ({
    params: { slug: post.slug },
  }));
}

const { slug } = Astro.params;
const post = await getPost(slug);
if (!post) {
  return Astro.redirect("/404");
}
---

<Layout
  title={post.title}
  description={post.excerpt}
  image={post.coverImage?.url}
  type="article"
>
  <article class:list={["mt-4", "mb-4"]}>
    <div class="article-container">
      <header class:list={["post-header"]}>
        <h1>{post.title}</h1>
        {
          post.publishedAt ? (
            <time datetime={post.publishedAt}>
              {new Date(post.publishedAt).toLocaleDateString("it-IT", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })}
            </time>
          ) : null
        }
      </header>
      
      {
        post.coverImage?.url ? (
          <div
            class="cover-image"
            style={`background-image: url(${post.coverImage?.url})`}
          />
        ) : null
      }
      
      <div class="post-content">
        <div set:html={post.content.html} />
      </div>
    </div>
  </article>
  
  <!-- CTA Section rimane invariata -->
</Layout>

<style>
  article {
    font-size: var(--font-size-xl);
    margin: var(--spacing-lg);

    @media (max-width: 768px) {
      font-size: var(--font-size-lg);
      margin: var(--spacing-md);
    }
  }
  
  .article-container {
    max-width: 80rem;
    margin: 0 auto;
    position: relative;
  }

  .post-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    background: var(--color-white);
    box-shadow: var(--shadow-md);
    color: var(--color-text);
    border-radius: var(--radius-xl) var(--radius-xl) 0 0;
    padding: var(--spacing-lg) var(--spacing-lg) calc(var(--spacing-lg) + 2rem);
    position: relative;
    z-index: 2;
  }

  .post-header h1 {
    font-family: var(--font-heading);
    font-size: var(--font-size-4xl);
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
    
    @media (max-width: 768px) {
      font-size: var(--font-size-3xl);
    }
  }

  .post-header time {
    display: inline-block;
    color: var(--color-text);
    font-style: italic;
    font-size: var(--font-size-base);
  }

  .cover-image {
    margin: -2rem auto 0;
    border-radius: var(--radius-lg) var(--radius-lg) 0 0;
    height: 40rem;
    background-size: cover;
    background-position: center;
    box-shadow: 0 -3px 3px rgba(142, 92, 0, 0.311);
    position: relative;
    z-index: 3;
    
    @media (max-width: 768px) {
      height: 25rem;
    }
  }

  .post-content {
    background: var(--color-white);
    margin-top: -2rem;
    padding: calc(var(--spacing-2xl) + 2rem) var(--spacing-lg) var(--spacing-lg);
    border-radius: 0 0 var(--radius-xl) var(--radius-xl);
    box-shadow: var(--shadow-md);
    line-height: 1.8;
    position: relative;
    z-index: 1;
  }

  .post-content h2,
  .post-content h3,
  .post-content h4,
  .post-content h5,
  .post-content h6 {
    color: var(--color-primary);
  }

  .post-content h2,
  .post-content h3 {
    text-align: center;
    font-family: var(--font-heading);
    margin: 2rem 0 1rem;
  }
  
  .post-content p {
    margin-bottom: 1.5rem;
  }
  
  .post-content img {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-md);
  }

  @media (max-width: 768px) {
    .post-header {
      padding: var(--spacing-lg) var(--spacing-md) calc(var(--spacing-lg) + 1rem);
    }
    
    .post-content {
      padding: calc(var(--spacing-xl) + 1rem) var(--spacing-md) var(--spacing-md);
    }
  }
</style>
---
import "../styles/global.css";
import SEO from "../components/SEO.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: "website" | "article";
}

const {
  title,
  description = "Coach Genitoriale ed Educatrice che aiuta le famiglie a superare le sfide educative, a rafforzare la comunicazione e a costruire relazioni familiari più armoniose e consapevoli.",
  image,
  type,
} = Astro.props;
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <SEO title={title} description={description} image={image} type={type} />
  </head>
  <body>
    <header>
      <nav class="container">
        <div class="logo">
          <a href="/">
            <img src="/adriana-pastore-logo.png" alt="Logo Adriana Pastore" />
          </a>
          <span class="logo-text">
            <a href="/">
              Adriana<br />
              Pastore
            </a>
            <div class="logo-text-sub">
              <a href="/"> PARENT COACH </a>
            </div>
          </span>
        </div>

        <button class="hamburger" id="hamburger-btn" aria-label="Menu">
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
        </button>

        <ul class="nav-menu" id="nav-menu">
          <li><a href="/">Home</a></li>
          <li><a href="/blog">Blog</a></li>
          <!-- <li><a href="/chi-sono">Chi Sono</a></li> -->
          <li><a href="/contatti">Contatti</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <div class="container-social">
        <div class="social-icons">
          <a
            href="https://www.instagram.com/adrianapastore_parentcoach/"
            target="_blank"
            aria-label="Instagram"
            class="social-icon"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><rect x="2" y="2" width="20" height="20" rx="5" ry="5"
              ></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
              ></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg
            >
          </a>
          <a
            href="https://www.linkedin.com/in/adriana-pastore-28b06160/"
            target="_blank"
            aria-label="LinkedIn"
            class="social-icon"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path
                d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
              ></path><rect x="2" y="9" width="4" height="12"></rect><circle
                cx="4"
                cy="4"
                r="2"></circle></svg
            >
          </a>
        </div>
      </div>
      <p class="text-center">
        &copy; {new Date().getFullYear()} Adriana Pastore. Partita IVA: 02546150448.
        Tutti i diritti riservati
      </p>
      <p class="text-center mt-2">
        Built with ❤️ in the garage by <a
          target="_blank"
          href="https://valerionarcisi.me">Valerio</a
        >
      </p>
    </footer>

    <script>
      // Attendi che il DOM sia completamente caricato
      document.addEventListener("DOMContentLoaded", function () {
        const hamburgerBtn = document.getElementById("hamburger-btn");
        const navMenu = document.getElementById("nav-menu");

        if (hamburgerBtn && navMenu) {
          hamburgerBtn.addEventListener("click", function () {
            hamburgerBtn.classList.toggle("is-active");
            navMenu.classList.toggle("is-active");
            document.body.classList.toggle("no-scroll");
          });
        }
      });
      (function () {
        var sbSiteSecret = "ac6314cc-c99d-4e5d-9547-3c2c2e899dad";
        window.sitebehaviourTrackingSecret = sbSiteSecret;
        var scriptElement = document.createElement("script");
        scriptElement.async = true;
        scriptElement.id = "site-behaviour-script-v2";
        scriptElement.src =
          "https://sitebehaviour-cdn.fra1.cdn.digitaloceanspaces.com/index.min.js?sitebehaviour-secret=" +
          sbSiteSecret;
        document.head.appendChild(scriptElement);
      })();
    </script>
  </body>
</html>

<style>
  header {
    background: var(--color-white);
    box-shadow: var(--shadow-md);
    padding: var(--spacing-xs) 0;
    position: relative;
  }

  nav {
    margin: 0 auto;
    max-width: 1440px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 var(--spacing-md);
  }
  nav ul {
    display: flex;
    font-family: var(--font-heading);
    font-size: 500;
    gap: var(--spacing-xl);
    list-style: none;
  }

  nav a {
    color: var(--color-text);
    font-weight: 600;
    transition: color var(--transition-fast);
  }

  nav a:hover {
    color: var(--color-primary);
  }

  main {
    min-height: calc(100vh - 180px);
  }

  footer {
    padding: var(--spacing-md);
    background: var(--color-white);
    border-top: 1px solid var(--color-gray-200);
    color: var(--color-gray-600);
    p {
      margin-bottom: 0;
    }
    .container-social {
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      justify-content: center;
      max-width: 15%;
      margin-bottom: var(--spacing-md);
      .social-icons {
        justify-content: center;
      }
      @media screen and (max-width: 768px) {
        max-width: 50%;
      }
    }
  }

  /* Hamburger menu */
  .hamburger {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    width: 30px;
    height: 30px;
    position: relative;
    z-index: 1000;
    padding: 0;
  }

  .hamburger-line {
    display: block;
    width: 30px;
    height: 3px;
    background-color: var(--color-primary);
    margin: 6px 0;
    border-radius: 3px;
    transition: all 0.3s ease;
  }

  .hamburger.is-active .hamburger-line:nth-child(1) {
    transform: translateY(9px) rotate(45deg);
  }

  .hamburger.is-active .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .hamburger.is-active .hamburger-line:nth-child(3) {
    transform: translateY(-9px) rotate(-45deg);
  }

  @media (max-width: 768px) {
    .hamburger {
      display: block;
    }

    .nav-menu {
      position: fixed;
      top: 0;
      right: -100%;
      width: 100%;
      height: 100vh;
      background-color: var(--color-white);
      flex-direction: column;
      justify-content: center;
      align-items: center;
      transition: all 0.5s ease;
      padding: 0;
      margin: 0;
      z-index: 999;
    }

    .nav-menu.is-active {
      right: 0;
    }

    .nav-menu li {
      margin: 20px 0;
    }

    .nav-menu a {
      font-size: var(--font-size-lg);
      @media (max-width: 768px) {
        font-size: var(--font-size-2xl);
      }
    }

    .no-scroll {
      overflow: hidden;
    }
  }

  .logo {
    display: flex;
    align-items: center;
    .logo-text {
      margin-left: var(--spacing-md);
      margin-top: var(--spacing-xs);
      font-family: var(--font-heading);
      font-size: var(--font-size-2xl);
      font-weight: 700;
      a {
        color: var(--color-logo);
      }
      .logo-text-sub {
        font-family: var(--font-body);
        margin-top: var(--spacing-xs);
        font-weight: 500;
        letter-spacing: 0.2cap;
        font-size: var(--font-size-xs);
      }
    }
  }
</style>

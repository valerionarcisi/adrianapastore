---
export interface Props {
  title: string;
  imagePath: string;
  description: string;
  slug: string;
}

const { title, imagePath, description, slug } = Astro.props;
---

<article class="service-card">
  <a href={slug}>
    <header class="service-header">
      <h1>{title}</h1>
    </header>
    <div 
      class="service-image" 
      style={`background-image: url(${imagePath})`}
    />
    <div class="service-content">
      <p>{description}</p>
    </div>
    <div class="mt-4 mb-4">
      <a href={slug} class="read-more">Scopri di più →</a>
    </div>
  </a>
</article>

<style>
  .service-card {
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    background: var(--color-white);
    box-shadow: var(--shadow-md);
    border-radius: var(--radius-xl);
    z-index: 2;
  }

  .service-card a {
    text-decoration: none;
    width: 100%;
  }

  .service-card h1 {
    font-family: var(--font-heading);
    font-size: var(--font-size-4xl);
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
  }

  @media (max-width: 768px) {
    .service-card h1 {
      font-size: var(--font-size-3xl);
    }
  }

  .service-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    background: var(--color-white);
    box-shadow: var(--shadow-md);
    color: var(--color-text);
    border-radius: var(--radius-xl) var(--radius-xl) 0 0;
    padding: var(--spacing-lg) var(--spacing-md) calc(var(--spacing-lg) + 0.5rem);
    position: relative;
    z-index: 2;
  }

  .service-image {
    margin: -2rem auto 0;
    border-radius: var(--radius-lg);
    height: 20rem;
    background-size: cover;
    background-position: center;
    box-shadow: 0 -3px 3px rgba(142, 92, 0, 0.311);
    position: relative;
    z-index: 3;
  }

  @media (max-width: 768px) {
    .service-image {
      height: 15rem;
    }
  }

  .service-content {
    margin-top: var(--spacing-sm);
    padding: 0 var(--spacing-sm) var(--spacing-sm);
  }

  .service-content p {
    line-height: 1.4;
  }

  .read-more {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
    margin: var(--spacing-md);
  }

  .read-more:hover {
    text-decoration: underline;
  }
</style>
      </div>
    </div>
    <script async src="https://talk.hyvor.com/embed/newsletter.js" type="module"
    ></script>
    <hyvor-talk-newsletter
      website-id="12979"
      t-button-subscribe="Iscriviti"
      t-button-subscribed="Iscritto"
      t-save="Modifica Preferenze"></hyvor-talk-newsletter>

  </div>
</section>

<style>
  .welcome {
    background-color: var(--color-gray-100);
    overflow: hidden;
    position: relative;
    animation: fade-in 1s ease-out forwards;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .welcome-header {
    display: flex;
    align-items: center;
    justify-content: space-around; /* Miglior gestione dello spazio tra immagine e testo */
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: var(--spacing-3xl) 0; /* Aumentato il padding verticale */
  }

  .profile-container {
    max-width: 500px;
  }

  .profile-circle {
    height: 100%;
    border-radius: var(--radius-xl);
    overflow: hidden;
    position: relative;
    box-shadow: var(--shadow-md);
    transition: transform var(--transition-normal);
  }

  .profile-circle:hover {
    transform: scale(1.05);
    box-shadow: var(--shadow-lg);
  }

  .profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    box-shadow: var(--shadow-md);
  }

  .geometric-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .element {
    position: absolute;
    border-radius: var(--radius-lg);
    opacity: 0.5;
    animation: float 8s ease-in-out infinite alternate;
  }

  .element-1 {
    width: 60px;
    height: 60px;
    background-color: var(--color-accent);
    top: 5%;
    left: 10%;
    transform: rotate(30deg);
    animation-delay: 1s;
  }

  .element-2 {
    width: 100px;
    height: 100px;
    background-color: var(--color-primary);
    bottom: 10%;
    right: 15%;
    border-radius: 50%;
    animation-delay: 2s;
  }

  .element-3 {
    width: 40px;
    height: 40px;
    background-color: var(--color-secondary);
    top: 70%;
    right: 30%;
    transform: rotate(60deg);
    border-radius: var(--radius-sm);
    animation-delay: 0s;
  }

  @keyframes float {
    0% {
      transform: translate(0, 0) rotate(0deg);
    }
    100% {
      transform: translate(8px, -8px) rotate(5deg);
    }
  }

  .welcome-content {
    flex: 1;
    max-width: 500px;
    background: var(--color-white);
    box-shadow: var(--shadow-md);
    color: var(--color-text);
    border-radius: var(--radius-xl);
    text-align: center;
    padding: var(--spacing-md);
  }

  h1 {
    font-family: var(--font-heading);
    font-size: var(--font-size-4xl);
    color: var(--color-text);
    margin-bottom: var(--spacing-lg);
    line-height: 1.2;
  }

  .name {
    color: var(--color-primary);
    font-style: italic;
  }

  .subtitle {
    font-size: var(--font-size-xl);
    color: var(--color-gray-700);
    margin-bottom: var(--spacing-xl);
    line-height: 1.5;
  }

  .cta-button {
    display: inline-block;
    padding: var(--spacing-lg) var(--spacing-3xl);
    background-color: var(--color-primary);
    color: var(--color-white);
    border-radius: var(--radius-xl);
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-normal);
    box-shadow: var(--shadow-md);
    font-size: var(--font-size-lg);
  }

  .cta-button:hover {
    background-color: var(--color-secondary);
    transform: translateY(-3px);
    box-shadow: var(--shadow-lg);
  }

  @media (max-width: 968px) {
    .welcome-header {
      flex-direction: column;
      text-align: center;
      gap: var(--spacing-3xl);
      padding: var(--spacing-lg);
    }

    .profile-container {
      width: 100%;
    }

    h1 {
      font-size: var(--font-size-3xl);
    }

    .welcome-content {
      text-align: center;
    }
  }

  @media (max-width: 480px) {

    h1 {
      font-size: var(--font-size-2xl);
    }

    .subtitle {
      font-size: var(--font-size-base);
    }

    .cta-button {
      padding: var(--spacing-md) var(--spacing-xl);
      font-size: var(--font-size-base);
    }
  }
  .newsletter-container {
    text-align: center;
    padding: 0 var(--spacing-xl);
    position: relative; 
  }

  .floating-arrow {
    position: absolute;
    top: 75%;
    right: 70%;
    transform: translateY(-50%);
    animation: floatArrow 2s ease-in-out infinite alternate;
    @media (min-width: 768px) and (max-width: 1224px) {
      right: 75%;
    }
  }

  @keyframes floatArrow {
    0% {
      transform: translateY(-50%) translateY(0px);
    }
    100% {
      transform: translateY(-50%) translateY(-10px);
    }
  }

  @media (max-width: 820px) {
    .floating-arrow {
      display: none;
    }
  }
</style>
